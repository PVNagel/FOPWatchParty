@page "/"

@inject HttpClient httpClient

<PageTitle>Index</PageTitle>

<div class="welcome-container">
    <h1>Welcome to the <span class="brand-color">FOP WatchParty</span> Webapp</h1>

    <div class="movie-container">
        @foreach (var movie in movies)
        {
            <div class="movie-item">
                <img src="@movie.Poster" class="movie-poster" />
            </div>
        }
    </div>

    <p class="tagline">
        Elevate your movie experience with FOP WatchParty!
    </p>

    <ul class="features-list">
        <li>Add movies to your watchlist</li>
        <li>Mark movies as "Interested" to keep track of what you want to watch</li>
        <li>Make reports on movies you've watched</li>
    </ul>

    <p class="cta">
        To start enjoying these features and personalize your experience, please log in or create an account.
    </p>

    <AuthorizeView>
        <Authorized>
            <p class="user-greeting">
                You are currently logged in. Start exploring your watchlist now!
            </p>
        </Authorized>
        <NotAuthorized>
            <p class="login-prompt">
                <a href="authentication/login" class="cta-button">Log in</a> with Google to get started.
            </p>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private List<Movie>? movies = new List<Movie>();
    private Movie? movie;

    protected override async Task OnInitializedAsync()
    {
        movie = await httpClient.GetFromJsonAsync<Movie>($"https://localhost:7055/api/movies/imdb-id/tt1130884");
        movies.Add(movie);
        movie = await httpClient.GetFromJsonAsync<Movie>($"https://localhost:7055/api/movies/imdb-id/tt1877830");
        movies.Add(movie);
        // movie = await httpClient.GetFromJsonAsync<Movie>($"https://localhost:7055/api/movies/imdb-id/tt0325980");
        // movies.Add(movie);
        movie = await httpClient.GetFromJsonAsync<Movie>($"https://localhost:7055/api/movies/imdb-id/tt15398776");
        movies.Add(movie);
    }
}

<style>
    .welcome-container {
        max-width: 800px;
        margin: auto;
        text-align: center;
    }

    h1 span.brand-color {
